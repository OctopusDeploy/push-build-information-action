{
  "author": "Octopus Deploy",
  "bugs": {
    "url": "https://github.com/OctopusDeploy/push-build-information-action/issues"
  },
  "dependencies": {
    "@actions/core": "^1.9.0",
    "@actions/github": "^5.0.3",
    "@octopusdeploy/api-client": "^1.1.7"
  },
  "description": "GitHub Action to Push Build Information to Octopus Deploy",
  "devDependencies": {
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.43",
    "@types/tmp": "^0.2.3",
    "@typescript-eslint/parser": "^5.27.0",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.16.0",
    "eslint-plugin-github": "^4.3.6",
    "eslint-plugin-jest": "^26.5.3",
    "jest": "^28.1.1",
    "jest-circus": "^28.0.3",
    "jest-junit": "^13.2.0",
    "js-yaml": "^4.1.0",
    "prettier": "2.7.0",
    "tmp": "^0.2.1",
    "ts-jest": "^28.0.4",
    "typescript": "^4.7.2"
  },
  "homepage": "https://github.com/OctopusDeploy/push-build-information-action#readme",
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "setupFiles": [
      "<rootDir>/src/test-setup.ts"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts"
    ],
    "testRunner": "jest-circus/runner",
    "testTimeout": 10000,
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "verbose": true
  },
  "jest-junit": {
    "outputDirectory": "reports",
    "outputName": "jest-junit.xml",
    "ancestorSeperator": " > ",
    "uniqueOutputName": "false",
    "suiteNameTemplate": "{filepath}",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}"
  },
  "keywords": [
    "cli",
    "deployment",
    "octopus-deploy",
    "github-actions"
  ],
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "name": "push-build-information-action",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OctopusDeploy/push-build-information-action.git"
  },
  "scripts": {
    "all": "npm run format && npm run build && npm test",
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "prebuild": "eslint src/**/*.ts",
    "postbuild": "ncc build -o dist",
    "test": "jest --ci --reporters=default --reporters=jest-junit"
  },
  "version": "0.1.2"
}
