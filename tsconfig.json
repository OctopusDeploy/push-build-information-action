{
  "compilerOptions": {
    "removeComments": true,
    "outDir": "./out",
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true                                 /* Skip type checking all .d.ts files. */
  },
  "exclude": ["node_modules", "dist", "out", "__tests__"],
  "include": ["src/**/*.ts"]
}
